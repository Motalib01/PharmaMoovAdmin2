@using PharmaMoov.Admin.Helpers
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor _httpCtxtAc;
@using PharmaMoov.Models.Admin;

@{
    ISession session = _httpCtxtAc.HttpContext.Session;

    var _adminUCtxt = session.GetObjectFromJson<AdminUserContext>("adminUserContext");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PharmaMoov</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <!-- Google Fonts Poppins -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

    <!-- Material Design Bootstrap -->
    <link rel="stylesheet" href="~/mdb/css/mdb.min.css">
    <link rel="stylesheet" href="~/mdb/css/style.css">
    <link rel="stylesheet" href="~/mdb/css/datatables.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/datatables/Buttons/css/buttons.dataTables.min.css" >
    <link rel="stylesheet" href="~/mdb/css/wysiwyg.min.css" />

    <!-- Your custom styles (optional) -->
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar" class="navbar-fixed-left">
            <div class="custom-menu">
                <button type="button" id="sidebarCollapse" class="btn btn-primary">
                    <i class="fa fa-bars"></i>
                    <span class="sr-only">Toggle Menu</span>
                </button>
            </div>
            <div class="pt-3 pb-3">
                <img src="~/img/logo.png" class="mx-auto d-block" style="width: 35%;" />
                <ul class="list-unstyled components mb-2 mt-3">
                    <li class="@(ViewBag.Current == "Dashboard" ? "active" : "")">
                        <a href="~/SAdmin/Dashboard"><span class="fas fa-th mr-3 ml-3"></span> Tableau de bord</a>
                    </li>
                    <li>
                        <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><span class="fas fa-store-alt mr-3 ml-3"></span> Gestion de la pharmacie</a>
                        <ul class="collapse list-unstyled" id="pageSubmenu">
                            <li class="@(ViewBag.Current == "ShopMgt" ? "active" : "")">
                                <a href="~/ShopMgt" class="pl-5">Liste des pharmacies</a>
                            </li>
                            <li class="@(ViewBag.Current == "ProductCategory" ? "active" : "")">
                                @*<a href="~/ShopCategory" class="pl-5">Catégorie de commerçants</a>*@
                                @* <a href="~/ProductCategory" class="pl-5">Catégorie de Produit</a> *@
                            </li>
                            <li class="@(ViewBag.Current == "ShopRequest" ? "active" : "")">
                                <a href="~/ShopMgt/ShopRequest" class="pl-5">Demande de Pharmacie</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                    <li>
                        <a href="#pageSubmenu2" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><span class="fas fa-users mr-3 ml-3"></span> Gestion des utilisateurs</a>
                        <ul class="collapse list-unstyled" id="pageSubmenu2">
                            <li class="@(ViewBag.Current == "Customers" ? "active" : "")">
                                <a href="~/UserMgt/Customers" class="pl-5">Les clients</a>
                            </li>
                            <li class="@(ViewBag.Current == "HealthProfessionals" ? "active" : "")">
                                <a href="~/UserMgt/HealthProfessionals" class="pl-5">
                                    Professionnels de la santé
                                </a>
                            </li>
                            <li class="@(ViewBag.Current == "Courriers" ? "active" : "")">
                                <a href="~/UserMgt/Couriers" class="pl-5">Courriers</a>
                            </li>
                            <li class="@(ViewBag.Current == "Owners" ? "active" : "")">
                                <a href="~/UserMgt/ShopOwners" class="pl-5">Propriétaires de pharmacies</a>
                            </li>
                            <li class="@(ViewBag.Current == "Admin" ? "active" : "")">
                                <a href="~/UserMgt/Admin" class="pl-5">Administrateurs</a>
                            </li>
                        </ul>
                    </li>
                    <li class="@(ViewBag.Current == "ShopCommisionInvoice" ? "active" : "")">
                        <a href="~/Shop/ShopCommisionInvoice"><span class="fas fa-chart-pie mr-3 ml-3"></span> Commission Reports</a>
                    </li>
                    <li class="@(ViewBag.Current == "Payment" ? "active" : "")">
                        <a href="~/Payment"><span class="fas fa-credit-card mr-3 ml-3"></span> Paiements</a>
                    </li>
                    <li class="@(ViewBag.Current == "Configs" ? "active" : "")">
                        <a href="~/SAdmin/Configs"><span class="fas fa-cogs mr-3 ml-3"></span> Setup Configuration</a>
                    </li>
                    <li class="@(ViewBag.Current == "Banner" ? "active" : "")">
                        <a href="~/Promo/ShopBanners"><span class="fas fa-percent mr-3 ml-3"></span> Bannières</a>
                    </li>
                    <li class="@(ViewBag.Current == "HelpRequest" ? "active" : "")">
                        <a href="~/SAdmin/HelpRequest"><span class="fas fa-comments mr-3 ml-3"></span>
                            Demande d'aide
                        </a>
                    </li>
                    @*<li>
                        <a href="#pageSubmenu4" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><span class="fas fa-comments mr-3 ml-3"></span> Demande d'aide</a>
                        <ul class="collapse list-unstyled" id="pageSubmenu4">
                            <li class="@(ViewBag.Current == "HelpRequest" ? "active" : "")">
                                <a href="~/SAdmin/HelpRequest" class="pl-5">
                                    Demande d'aide
                                </a>
                            </li>
                            <li class="@(ViewBag.Current == "GeneralConcern" ? "active" : "")">
                                <a href="~/SAdmin/GeneralConcern" class="pl-5">
                                    Questions générales
                                </a>
                            </li>
                        </ul>
                    </li>*@
                    <li>
                        <a href="#pageSubmenu5" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><span class="fas fa-question-circle mr-3 ml-3"></span> Document Légaux</a>
                        <ul class="collapse list-unstyled" id="pageSubmenu5">
                            <li class="@(ViewBag.Current == "Documents" ? "active" : "")">
                                <a href="~/Shop/Documents" class="pl-5">Documents</a>
                            </li>
                            <li class="@(ViewBag.Current == "FAQs" ? "active" : "")">
                                <a href="~/FAQs" class="pl-5">FAQs</a>
                            </li>
                            <li class="@(ViewBag.Current == "Terms" ? "active" : "")">
                                <a href="~/FAQs/Terms" class="pl-5">Termes et Conditions</a>
                            </li>
                            <li class="@(ViewBag.Current == "Privacy" ? "active" : "")">
                                <a href="~/FAQs/Privacy" class="pl-5">Politique de Confidentialité</a>
                            </li>
                        </ul>
                    </li>
                </ul>

            </div>
        </nav>

        <!-- Page Content  -->
        <div id="content">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-md navbar-light navbar-custom navbar-fixed-top">

                <!-- Links -->
                <div class="collapse navbar-collapse" id="basicExampleNav4">

                    <!-- Right -->
                    <ul class="navbar-nav ml-auto nav-flex-icons float-right pt-2 pr-5">
                        <li class="nav-item dropdown mr-4" hidden>
                            <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink-333" data-toggle="dropdown"
                               aria-haspopup="true" aria-expanded="false">
                                <h4><i class="far fa-bell text-gray"></i></h4>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-default" aria-labelledby="navbarDropdownMenuLink-333">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <div class="row d-flex">
                                <div class="p-2">
                                    <img src="~/img/logo.png" class="rounded-circle z-depth-0" style=" width: 40px; height: 40px;">
                                </div>
                                <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink-55" data-toggle="dropdown"
                                   aria-haspopup="true" aria-expanded="false">
                                    <div class="mr-5">
                                        <h6 class="m-0">@_adminUCtxt.AdminInfo.FirstName</h6>                                      
                                        @if (_adminUCtxt.AdminInfo.UserTypeId == PharmaMoov.Models.UserTypes.SUPERADMIN)
                                        {
                                    <small>Super Administrateur</small>
                                        }
                                    </div>
                                </a>
                                <div class="dropdown-menu dropdown-menu-lg-right dropdown-secondary" aria-labelledby="navbarDropdownMenuLink-55">
                                    <a class="dropdown-item text-danger" href="~/Home/AdminChangePassword">Changer le mot de passe</a>
                                    <a class="dropdown-item text-danger" href="~/Home/Logout">Déconnexion</a>
                                </div>
                            </div>
                        </li>
                    </ul>

                </div>
                <!-- Links -->

            </nav>
            <!-- Navbar -->

            <div class="container">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script type="text/javascript" src="~/mdb/js/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="~/mdb/js/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="~/mdb/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="~/mdb/js/mdb.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript" src="~/mdb/js/wysiwyg.min.js"></script>
    <!-- for DataTables -->
    <script type="text/javascript" src="~/mdb/js/datatables.min.js" asp-append-version="true"></script>

    <script type="text/javascript" src="~/datatables/DataTables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/datatables/Buttons/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="~/datatables/JSZip/jszip.min.js"></script>
    <script type="text/javascript" src="~/datatables/pdfmake/pdfmake.min.js"></script>
    <script type="text/javascript" src="~/datatables/pdfmake/vfs_fonts.js"></script>
    <script type="text/javascript" src="~/datatables/Buttons/js/buttons.html5.min.js"></script>
    <script type="text/javascript" src="~/datatables/Buttons/js/buttons.print.min.js"></script>

    <!-- Your custom scripts (optional) -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Super admin scripts -->
    <script src="~/js/sasite.js" asp-append-version="true"></script>

    <script src="~/js/shsite.js" asp-append-version="true"></script>

    <!-- Google Map API -->
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD4dXCD7qIUhWDCs-N2PZjFxe8v6l5hRWE" type="text/javascript"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

