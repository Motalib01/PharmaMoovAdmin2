@using PharmaMoov.Models.Product
@model IEnumerable<ProductList>

@{
    ViewData["Title"] = "Liste de produits";
}

<div class="row p-3 p-lg-5">
    <div class="col-sm-12">
        <nav aria-label="breadcrumb">
            <h3 class="mb-4">Liste de produits</h3>
        </nav>
        <div class="col-sm-12 d-flex justify-content-end mb-3">
            <a class="btn login-button btn-primary border-0 btn-padding" href="~/Product/AddProduct">Créer un nouveau produit</a>
            <a class="btn login-button btn-primary border-0 btn-padding" href="~/Product/ImportProducts">
                Importer produit
            </a>
        </div>
        
        <div class="card">
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-sm-12 col-md-6">
                        <!-- Search form -->
                        <div class="form-inline">
                            <input class="form-control form-control-sm mr-3 w-75" id="SearchTables" type="text" placeholder="Rechercher Produits..." aria-label="Search">
                            <i class="fas fa-search" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <div class="form-inline float-right">
                            <label class="mr-4">Filtrer par catégorie: </label>
                            <select class="browser-default custom-select" id="categoryFilter">
                                <option value="" selected>Sélectionnez une catégorie</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                <div class="table-responsive-sm">
                                    <table class="table table-hover table-bordered table-striped display" id="dtMainList">
                                        <thead class="thead-light">
                                            <tr>
                                                <th scope="col" class="th-sm font-weight-bold">Identifiant produit</th>
                                                <th scope="col" class="th-sm font-weight-bold">Image produit</th>
                                                <th scope="col" class="th-sm font-weight-bold">Nom de produit</th>
                                                <th scope="col" class="th-sm font-weight-bold">Prix</th>
                                                <th scope="col" class="th-sm font-weight-bold">Catégorie</th>
                                                <th scope="col" class="th-sm font-weight-bold">Statut</th>
                                                <th scope="col" class="th-sm font-weight-bold">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                var ctr = 1;
                                                @foreach (var prod in Model)
                                                {
                                                    <tr>
                                                        <td>@ctr</td>
                                                        <td><img src="@prod.ProductIcon" style='width:75px;height:75px;'></td>
                                                        <td>@prod.ProductName</td>
                                                        <td>@prod.ProductPrice.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)</td>
                                                        <td>@prod.ProductCategory</td>

                                                        @if (prod.ProductStatus == PharmaMoov.Models.ProductStatus.ACTIVE)
                                                        {
                                                            <td><p class="badge badge-success text-uppercase">En stock</p></td>
                                                        }
                                                        else if (prod.ProductStatus == PharmaMoov.Models.ProductStatus.INACTIVE)
                                                        {
                                                            <td><p class="badge badge-warning text-uppercase">Inactif</p></td>
                                                        }
                                                        else
                                                        {
                                                            <td><p class="badge badge-danger text-uppercase">Stock épuisé</p></td>
                                                        }
                                                        <td class="text-center">
                                                            <button class="btn btn-action dropdown-toggle" type="button" data-toggle="dropdown"
                                                                    aria-haspopup="true" aria-expanded="false">
                                                                <i class="fas fa-bars"></i>
                                                            </button>
                                                            <div class="dropdown-menu">
                                                                <a class="dropdown-item" href="~/Product/EditProduct?pid=@prod.ProductRecordId">Modifier un produit</a>

                                                                @if (prod.ProductStatus == PharmaMoov.Models.ProductStatus.ACTIVE)
                                                                {
                                                                    <a class="dropdown-item text-danger" onclick="changeStatus(@prod.ProductRecordId, 2)">Définir comme inactif</a>
                                                                    <a class="dropdown-item" onclick="changeStatus(@prod.ProductRecordId, 3)">Rupture de stock</a>
                                                                }
                                                                else if (prod.ProductStatus == PharmaMoov.Models.ProductStatus.INACTIVE)
                                                                {
                                                                    <a class="dropdown-item" onclick="changeStatus(@prod.ProductRecordId, 1)">Définir comme actif</a>
                                                                    <a class="dropdown-item" onclick="changeStatus(@prod.ProductRecordId, 3)">Rupture de stock</a>
                                                                }
                                                                else
                                                                {
                                                                    <a class="dropdown-item" onclick="changeStatus(@prod.ProductRecordId, 1)">Définir comme actif</a>
                                                                    <a class="dropdown-item text-danger" onclick="changeStatus(@prod.ProductRecordId, 2)">Définir comme inactif</a>
                                                                }
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    ctr++;
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            var dtProductList = $('#dtMainList').DataTable({
                "info": true,
                "lengthChange": false,
                "sDom": 'lrtip',
                "language": {
                    "info": "Afficher de _START_ à _END_ sur _TOTAL_ entrées",
                    "emptyTable": "Aucune donnée disponible dans le tableau",
                    "infoEmpty": "Affichage 0 à 0 sur 0 entrées",
                    "search": "Cherchez:",
                    "paginate": {
                        "first": "Premier",
                        "last": "Dernier",
                        "next": "Suivant",
                        "previous": "Précédent"
                    }
                },
                initComplete: function () {
                    this.api().columns(4).every(function () {
                        var column = this;
                        //var select = $('<select><option value=""></option></select>')

                        var select = $('#categoryFilter')
                            //.appendTo($(column.footer()).empty())
                            .on('change', function () {
                                var val = $.fn.dataTable.util.escapeRegex(
                                    $(this).val()
                                );

                                column.search(val ? '^' + val + '$' : '', true, false)
                                    .draw();
                            });

                        column.data().unique().sort().each(function (d, j) {
                            select.append('<option value="' + d + '">' + d + '</option>')
                        });
                    });
                }
            });

            //Search field
            $("#SearchTables").on('keyup click', function () {
                dtProductList.search($("#SearchTables").val(), true, true, true).draw();
            });

            $('.dataTables_length').addClass('bs-select');
        });

        function changeStatus(pid, stat) {
            var parameters = {
                ProductRecordId: pid,
                ProductStatus: stat
            };

            $.ajax(
                {
                    type: 'POST',
                    url: BASEPATH + '/Product/ChangeProductStatus',
                    contentType: 'application/json',
                    data: JSON.stringify(parameters),
                    beforeSend: function () {
                        $("#GenericModal").modal('show');
                        $("#GenericModalTitle").text("Merci de patienter");
                        $("#savingGenericLoader").show();
                    },
                    success: function (result) {
                        window.location.replace(BASEPATH + "/Product/");
                    },
                    failed: function (e, x, h) {
                        console.log(e); console.log(h); console.log(x);
                    }
                }
            );
        }
    </script>
}
