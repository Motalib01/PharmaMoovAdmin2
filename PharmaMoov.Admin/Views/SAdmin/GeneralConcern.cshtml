@using PharmaMoov.Models.User
@model List<UserGeneralConcernView>
@{
    ViewData["Title"] = "Question d'ordre général";
    Layout = "~/Views/Shared/_SALayout.cshtml";
}

<div class="row p-3 p-lg-5">
    <div class="col-sm-12">
        <nav aria-label="breadcrumb">
            <h3 class="mb-4">
                Question d'ordre général
            </h3>
        </nav>

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12">
                        <p>Vous avez un total de <span class="link-color font-weight-bold">@Model.Count</span> commentaire.</p>
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                <div class="table-responsive-sm">
                                    <table class="table table-hover table-bordered table-striped display" id="dtRequestList">
                                        <thead class="thead-light">
                                            <tr>
                                                <th scope="col" class="th-sm font-weight-bold">Numero</th>
                                                <th scope="col" class="th-sm font-weight-bold">Nom</th>
                                                <th scope="col" class="th-sm font-weight-bold">Subject</th>
                                                <th scope="col" class="th-sm font-weight-bold">Description</th>
                                                <th scope="col" class="th-sm font-weight-bold">Mobile</th>
                                                <th scope="col" class="th-sm font-weight-bold">Email</th>
                                                <th scope="col" class="th-sm font-weight-bold">Date</th>
                                                <th scope="col" class="th-sm font-weight-bold">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.Count > 0)
                                            {
                                                foreach (UserGeneralConcernView uhrV in Model)
                                                {
                                                    <tr>
                                                        <td>@uhrV.UserConcernRecordID</td>
                                                        <td>@uhrV.UserFullName</td>
                                                        <td>@uhrV.Subject</td>
                                                        <td>@uhrV.Description</td>
                                                        <td>@uhrV.UserMobileNumber</td>
                                                        <td>@uhrV.UserEmail</td>
                                                        <td class="text-capitalize">@(uhrV.DateCreated.HasValue ? uhrV.DateCreated.Value.ToString("dd/MM/yyyy") : "--/--/----")</td>
                                                        <td class="text-center">
                                                            <button class="btn btn-action dropdown-toggle" type="button" data-toggle="dropdown"
                                                                    aria-haspopup="true" aria-expanded="false">
                                                                <i class="fas fa-bars"></i>
                                                            </button>
                                                            <div class="dropdown-menu">
                                                                <a class="dropdown-item" href="~/SAdmin/HelpRequestView?id=@uhrV.UserConcernRecordID" >Voir</a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dtRequestList').DataTable({
                "info": false,
                "lengthChange": false
            });
            $('.dataTables_length').addClass('bs-select');
        });

    </script>
}