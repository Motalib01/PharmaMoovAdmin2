@using PharmaMoov.Models.User
@model UserGeneralConcernView
@{
    ViewData["Title"] = "Question d'ordre général";
    Layout = "~/Views/Shared/_SALayout.cshtml";
}


<div class="row p-3 p-lg-5">
    <div class="col-sm-12">
        <nav aria-label="breadcrumb">
            <h3 class="mb-4">
                Question d'ordre général
            </h3>
        </nav>

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md"><span class="text-center font-weight-bolder">Numero</span></div>
                    <div class="col-md"><span class="text-center font-weight-lighter">@Model.UserConcernRecordID</span></div>
                </div>

                <div class="row">
                    <div class="col-md"><span class="text-center font-weight-bolder">Nom</span></div>
                    <div class="col-md"><span class="text-center font-weight-lighter">@Model.UserFullName</span></div>
                </div>

                <div class="row">
                    <div class="col-md"><span class="text-center font-weight-bolder">Commande #</span></div>
                    <div class="col-md">
                        <a class="btn login-button border-0 btn-padding" href="~/SAdmin/OrderDetails?rid=@Model.UserConcernRecordID">
                            Voir commande
                        </a>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md"><span class="text-center font-weight-bolder">Date</span></div>
                    <div class="col-md"><span class="text-center font-weight-lighter">@(Model.DateCreated.HasValue ? Model.DateCreated.Value.ToString("dd/MM/yyyy") : "--/--/----")</span></div>
                </div>

                <div class="row">
                    <div class="col-md"><span class="text-center font-weight-bolder">Description</span></div>
                    <div class="col-md"><span class="text-center font-weight-lighter">@Model.Description</span></div>
                </div>
            </div>
        </div>
    </div>
</div>