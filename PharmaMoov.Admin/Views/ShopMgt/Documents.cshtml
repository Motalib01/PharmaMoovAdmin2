@using PharmaMoov.Models.Shop
@model IEnumerable<ShopDocument>

@{
    ViewData["Title"] = "Documents";
}

<partial name="~/Views/Shared/_GenericModal.cshtml" />

<div class="row p-3 p-lg-5">
    <div class="col-sm-12">
        <nav aria-label="breadcrumb">
            <h3 class="mb-4">Documents</h3>
        </nav>
        <div class="row mt-3 mb-3">
            <div class="col-sm-6">
                <a href="/ShopMgt" class="text-primary"><i class="fas fa-long-arrow-alt-left"></i> Retour</a>
            </div>
        </div>
        <div class="card">
            <div class="card-body">

                <div class="row">
                    <div class="col-sm-12">
                        <h5 class="mt-3">Fichiers</h5>
                        <div class="table-responsive-sm table-custom">
                            <table id="dtPaiements" class="table table-hover">
                                <thead class="thead-light">
                                    <tr>
                                        <th class="th-sm font-weight-bold">
                                            Nom du fichier
                                        </th>
                                        <th class="th-sm font-weight-bold">
                                            Date de publication
                                        </th>
                                        <th class="th-sm font-weight-bold">
                                            Taille du fichier
                                        </th>
                                        <th class="th-sm font-weight-bold">
                                            Action
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td><i class="fas fa-file-alt mr-3"></i> @item.FileName</td>
                                                <td>@(item.CreatedDate.HasValue ? item.CreatedDate.Value.ToString("MMMM dd, yyyy") : "--/--/----")</td>
                                                <td><p>@item.FileSize</p></td>
                                                <td>
                                                    <button class="btn btn-action dropdown-toggle mr-4" type="button" data-toggle="dropdown"
                                                            aria-haspopup="true" aria-expanded="false">
                                                        <i class="fas fa-bars"></i>
                                                    </button>
                                                    <div class="dropdown-menu">
                                                        <a class="dropdown-item" href="@Url.Action("DownloadFile", "Shop", new { path = item.FilePath, name = item.FileName })">Télécharger</a>
                                                        <a class="dropdown-item text-danger" onclick='deleteDoc(@item.ShopDocumentID);'>Supprimer</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">

        $("#UploadDocument").change(function () {
            validateDocument("UploadDocument");
        });

        function deleteDoc(sid) {
            $.ajax(
                {
                    type: 'POST',
                    url: BASEPATH + '/Shop/DeleteShopDocument',
                    contentType: 'application/json',
                    data: JSON.stringify(sid),
                    beforeSend: function () {
                        $("#GenericModal").modal('show');
                        $("#GenericModalTitle").text("Merci de patienter");
                        $("#savingGenericLoader").show();
                    },
                    success: function (result) {
                        $("#GenericModal").modal('show');
                        $("#savingGenericLoader").hide();
                        $("#GenericModalTitle").text(result.message);
                        $("#successIcon").show();
                        $("#successBtn").show();
                    },
                    failed: function (e, x, h) {
                        console.log(e); console.log(h); console.log(x);
                    }
                }
            );
        }

        $("#successBtn, #errorBtn").on('click', function () {
            window.location.replace(BASEPATH + "/ShopMgt/Documents");
        });
    </script>
}