@using PharmaMoov.Models

@{
    ViewData["Title"] = "Réinitialiser le mot de passe ";
    Layout = "~/Views/Shared/_Startup.cshtml";
}

<div class="container">
    <div class="Login">
        <form class="text-center">
            <img src="~/img/check-icon.svg" class="img-fluid mb-4" />
            <h5 class="font-weight-normal mt-3 mb-4">Votre mot de passe <br />a ete renouvele</h5>
            <p>Vous allez recevoir un email <br />contenant votre nouveau mot de passe.</p>

            @if (ViewBag.AccountType == "1") //SA
            {
                <a class="btn login-button mt-4 mb-4 w-100" href="~/SAdmin/">Fait</a>
            }
            else
            {
                //for the other Admin role
                <a class="btn login-button mt-4 mb-4 w-100" href="~/Shop/">Fait</a>
            }
        </form>
    </div>
</div>