@using PharmaMoov.Models.Shop
@model IEnumerable<ShopList>

@{
    ViewData["Title"] = "Propriétaires de pharmacies";
    Layout = "~/Views/Shared/_SALayout.cshtml";
}

<div class="row p-3 p-lg-5">
    <div class="col-sm-12">
        <nav aria-label="breadcrumb">
            <h3 class="mb-4">Propriétaires de pharmacies</h3>
        </nav>
        <div class="col-sm-12 d-flex justify-content-end mb-3">
            <a class="btn login-button btn-padding" id="thisExportBtn" href="#">Exporter dans Excel</a>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                <div class="table-responsive-sm">
                                    <table class="table table-hover table-bordered table-striped display" id="dtOwnersList">
                                        <thead class="thead-light">
                                            <tr>
                                                <th scope="col" class="th-sm font-weight-bold">ID</th>
                                                <th scope="col" class="th-sm font-weight-bold">Photo du profil </th>
                                                <th scope="col" class="th-sm font-weight-bold">Le nom du propriétaire</th>
                                                <th scope="col" class="th-sm font-weight-bold">Email</th>
                                                <th scope="col" class="th-sm font-weight-bold">Nom de la pharmacie</th>
                                                <th scope="col" class="th-sm font-weight-bold">Date de création</th>
                                                <th scope="col" class="th-sm font-weight-bold">Statut</th>
                                                <th scope="col" class="th-sm font-weight-bold">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@item.ShopRecordID</td>
                                                        <td>
                                                            @if (item.ShopIcon != null)
                                                            {
                                                                <img src="@item.ShopIcon" style='width:75px;height:75px;'>
                                                            }
                                                            else
                                                            {
                                                                <img src="~/img/default-img.png" style='width:75px;height:75px;'>
                                                            }
                                                        </td>
                                                        <td class="text-capitalize">@item.Owner</td>
                                                        <td>@item.Email</td>
                                                        <td class="text-capitalize">@item.Name</td>
                                                        <td class="text-capitalize">@item.DateCreated.ToString("dd MMM yyyy")</td>

                                                        @if (item.Status == true)
                                                        {
                                                            <td><p class="badge bg-primary text-uppercase">Actif</p></td>
                                                        }
                                                        else
                                                        {
                                                            <td><p class="badge bg-danger text-uppercase">Inactif</p></td>
                                                        }

                                                        <td class="text-center">
                                                            <button class="btn btn-action dropdown-toggle" type="button" data-toggle="dropdown"
                                                                    aria-haspopup="true" aria-expanded="false">
                                                                <i class="fas fa-bars"></i>
                                                            </button>
                                                            <div class="dropdown-menu">
                                                                <a class="dropdown-item" href="~/UserMgt/EditShopOwner?ShopID=@item.ShopRecordID">Modifier</a>

                                                                @if (item.Status == true)
                                                                {
                                                                    <a class="dropdown-item" onclick="changeStatus(@item.ShopRecordID, false)">Marquer comme inactif</a>
                                                                }
                                                                else
                                                                {
                                                                    <a class="dropdown-item" onclick="changeStatus(@item.ShopRecordID, true)">Marquer comme actif</a>
                                                                }
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dtOwnersList').DataTable({
                "dom": 'Bfrtip',
                "language": {
                    "info": "Afficher de _START_ à _END_ sur _TOTAL_ entrées",
                    "emptyTable": "Aucune donnée disponible dans le tableau",
                    "infoEmpty": "Affichage 0 à 0 sur 0 entrées",
                    "search": "Cherchez:",
                    "paginate": {
                        "first": "Premier",
                        "last": "Dernier",
                        "next": "Suivant",
                        "previous": "Précédent"
                    }
                },
                "buttons": [
                    {
                        text: 'Excel to Export',
                        extend: 'excelHtml5',
                        fieldSeparator: '\t',
                        extension: '.xlsx',
                        attr: {
                            id: 'exportBtn',
                            hidden: 'hidden'
                        },
                        className: 'login-button btn-padding',
                        exportOptions: {
                            columns: [0, 2, 3, 4, 5, 6]
                        }
                    }
                ],
                "info": true,
                "lengthChange": false
            });
            $('.dataTables_length').addClass('bs-select');
            $('input[type=search]').addClass('form-control');

            $("#thisExportBtn").click(function () {
                $("#exportBtn").click();
            });
        });

        function changeStatus(rid, stat) {
            var parameters = {
                RecordId: rid,
                IsActive: stat
            };
            $.ajax(
                {
                    type: 'POST',
                    url: BASEPATH + '/ShopMgt/ChangeShopStatus',
                    contentType: 'application/json',
                    data: JSON.stringify(parameters),
                    beforeSend: function () {
                        $("#GenericModal").modal('show');
                        $("#GenericModalTitle").text("Merci de patienter");
                        $("#savingGenericLoader").show();
                    },
                    success: function (result) {
                        window.location.replace(BASEPATH + "/UserMgt/ShopOwners");
                    },
                    failed: function (e, x, h) {
                        console.log(e); console.log(h); console.log(x);
                    }
                }
            );
        }
    </script>
}