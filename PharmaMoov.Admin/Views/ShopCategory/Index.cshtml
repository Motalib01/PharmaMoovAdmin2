@using PharmaMoov.Models.Shop
@model IEnumerable<ShopCategoriesDTO>

@{
    ViewData["Title"] = "Liste des catégories";
    Layout = "~/Views/Shared/_SALayout.cshtml";
}

<div class="row p-3 p-lg-5">
    <div class="col-sm-12">
        <nav aria-label="breadcrumb">
            <h3 class="mb-4">Liste des catégories</h3>
        </nav>
        <div class="col-sm-12 d-flex justify-content-end mb-3">
            <a class="btn login-button btn-primary border-0 btn-padding waves-effect waves-light" href="~/ShopCategory/AddShopCategory">
                Nouvelle catégorie
            </a>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                <div class="table-responsive-sm">
                                    <table class="table table-hover table-bordered table-striped display" id="dtMainList">
                                        <thead class="thead-light">
                                            <tr>
                                                <th scope="col" class="th-sm font-weight-bold">Identifiant </th>
                                                <th scope="col" class="th-sm font-weight-bold">Photo</th>
                                                <th scope="col" class="th-sm font-weight-bold">Nom</th>
                                                <th scope="col" class="th-sm font-weight-bold">Date de création</th>
                                                <th scope="col" class="th-sm font-weight-bold">Statut</th>
                                                <th scope="col" class="th-sm font-weight-bold">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @if (Model != null)
                                            {
                                                @foreach (var item in Model)
                                                {
                                            <tr>
                                                <td>@item.ShopCategoryId</td>
                                                <td><img src="@item.ImageUrl" style='width:75px;height:75px;'></td>
                                                <td>@item.Name</td>
                                                <td class="text-capitalize">@item.DateCreated.ToString("dd/MM/yyyy")</td>

                                                @if (item.IsActive == true)
                                                {
                                                    <td><p class="green-text font-weight-bold">Actif</p></td>
                                                }
                                                else
                                                {
                                                    <td><p class="red-text font-weight-bold">Inactif</p></td>
                                                }

                                                <td class="text-center">
                                                    <button class="btn btn-action dropdown-toggle" type="button" data-toggle="dropdown"
                                                            aria-haspopup="true" aria-expanded="false">
                                                        <i class="fas fa-bars"></i>
                                                    </button>
                                                    <div class="dropdown-menu">
                                                        <a class="dropdown-item" href="~/ShopCategory/EditShopCategory?cid=@item.ShopCategoryId">Modifier une catégorie</a>

                                                        @if (item.IsActive == true)
                                                        {
                                                            <a class="dropdown-item text-danger" onclick="changeStatus(@item.ShopCategoryId, false)">Définir comme inactif</a>
                                                        }
                                                        else
                                                        {
                                                             <a class="dropdown-item" onclick="changeStatus(@item.ShopCategoryId, true)">Définir comme actif</a>
                                                        }
                                                    </div>
                                                </td>
                                            </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dtMainList').DataTable({
                "info": true,
                "lengthChange": false
            });
            $('.dataTables_length').addClass('bs-select');
        });

        function changeStatus(rid, stat) {
            var parameters = {
                RecordId: rid,
                IsActive: stat
            };
            $.ajax(
                {
                    type: 'POST',
                    url: BASEPATH + '/ShopCategory/ChangeShopCategoryStatus',
                    contentType: 'application/json',
                    data: JSON.stringify(parameters),
                    beforeSend: function () {
                        $("#GenericModal").modal('show');
                        $("#GenericModalTitle").text("Merci de patienter");
                        $("#savingGenericLoader").show();
                    },
                    success: function (result) {
                        window.location.replace(BASEPATH + "/ShopCategory");
                    },
                    failed: function (e, x, h) {
                        console.log(e); console.log(h); console.log(x);
                    }
                }
            );
        }
    </script>
}
