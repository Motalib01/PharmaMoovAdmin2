@using PharmaMoov.Models.Admin
@model IEnumerable<AdminList>

@{
    ViewData["Title"] = "Liste des administrateurs";
}

<partial name="~/Views/Shared/_GenericModal.cshtml" />

<div class="row p-3 p-lg-5">
    <div class="col-sm-12">
        <nav aria-label="breadcrumb">
            <h3 class="mb-4">Liste des administrateurs</h3>
        </nav>
        <div class="col-sm-12 d-flex justify-content-end mb-3">
            <a class="btn login-button btn-primary border-0 btn-padding" href="~/Admin/AddAdmin">Créer un utilisateur</a>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                <div class="table-responsive-sm">
                                    <table class="table table-hover table-bordered table-striped display" id="dtMainList">
                                        <thead class="thead-light">
                                            <tr>
                                                <th scope="col" class="th-sm font-weight-bold">#</th>
                                                <th scope="col" class="th-sm font-weight-bold">Photo du profil</th>
                                                <th scope="col" class="th-sm font-weight-bold">Nom d'utilisateur</th>
                                                <th scope="col" class="th-sm font-weight-bold">Rôle</th>
                                                <th scope="col" class="th-sm font-weight-bold">Statut</th>
                                                <th scope="col" class="th-sm font-weight-bold">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>


                                            @if (Model != null)
                                            {
                                                var ctr = 1;
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@ctr</td>
                                                        <td><img src="@item.ImageUrl" style='width:75px;height:75px;'></td>
                                                        <td class="text-capitalize">@item.FullName</td>
                                                        <td class="text-capitalize">@item.UserType</td>

                                                        @if (item.IsActive == true)
                                                        {
                                                            <td><p class="green-text font-weight-bold">Actif</p></td>
                                                        }
                                                        else
                                                        {
                                                            <td><p class="red-text font-weight-bold">Inactif</p></td>
                                                        }


                                                        <td>
                                                            <button class="btn btn-action dropdown-toggle" type="button" data-toggle="dropdown"
                                                                    aria-haspopup="true" aria-expanded="false">
                                                                <i class="fas fa-bars"></i>
                                                            </button>
                                                            <div class="dropdown-menu">
                                                                <a class="dropdown-item" href="~/Admin/EditAdmin?pid=@item.AdminRecordID">Modifier un utilisateur</a>

                                                                @if (item.IsActive == true)
                                                                {
                                                                    <a class="dropdown-item text-danger" onclick="changeStatus(@item.AdminRecordID, 0)">Définir comme inactif</a>
                                                                }
                                                                else
                                                                {
                                                                    <a class="dropdown-item" onclick="changeStatus(@item.AdminRecordID, 1)">Définir comme actif</a>
                                                                }
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    ctr++;
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dtMainList').DataTable({
                "info": true,
                "lengthChange": false,
                "language": {
                    "info": "Afficher de _START_ à _END_ sur _TOTAL_ entrées",
                    "emptyTable": "Aucune donnée disponible dans le tableau",
                    "infoEmpty": "Affichage 0 à 0 sur 0 entrées",
                    "search": "Cherchez:",
                    "paginate": {
                        "first": "Premier",
                        "last": "Dernier",
                        "next": "Suivant",
                        "previous": "Précédent"
                    }
                },
            });
            $('.dataTables_length').addClass('bs-select');
        });

        function changeStatus(rid, stat) {
            var parameters = {
                RecordId: rid,
                IsActive: stat
            };

            $.ajax(
                {
                    type: 'POST',
                    url: BASEPATH + '/Admin/ChangeAdminStatus',
                    contentType: 'application/json',
                    data: JSON.stringify(parameters),
                    beforeSend: function () {
                        $("#GenericModal").modal('show');
                        $("#GenericModalTitle").text("Merci de patienter");
                        $("#savingGenericLoader").show();
                    },
                    success: function (result) {
                        window.location.replace(BASEPATH + "/Admin/");
                    },
                    failed: function (e, x, h) {
                        console.log(e); console.log(h); console.log(x);
                    }
                }
            );
        }
    </script>
}
